# Application Settings
APP_NAME=ai-accelerator
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
# Use port 5433 for external access (mapped from container's 5432)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5433/ai_accelerator
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Settings
# Use port 6380 for external access (mapped from container's 6379)
REDIS_URL=redis://localhost:6380/0
REDIS_SESSION_TTL=86400

# Neo4j Settings
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Neo4j MCP Settings
NEO4J_MCP_URL=http://localhost:3006

# Filesystem MCP Settings
FILESYSTEM_MCP_URL=http://localhost:3004
CODEBASE_ROOT=/path/to/codebase

# GitHub Copilot CLI/SDK Settings
# Authentication: Use a fine-grained PAT with "Copilot Requests" permission
# Create at: https://github.com/settings/personal-access-tokens/new
# Either GH_TOKEN or GITHUB_TOKEN will work
GH_TOKEN=your-github-token-here
GITHUB_TOKEN=

# Copilot CLI path (leave empty to use default 'copilot' from PATH)
COPILOT_CLI_PATH=

# Model to use (defaults to claude-sonnet-4-5)
# Options: claude-sonnet-4-5, gpt-4, etc.
COPILOT_MODEL=claude-sonnet-4-5

# Legacy API key (for backwards compatibility, prefer GH_TOKEN)
COPILOT_API_KEY=

# Context Management
MAX_CONTEXT_TOKENS=8000
CONTEXT_WINDOW_SIZE=10

# Verification Settings
VERIFICATION_CONFIDENCE_THRESHOLD=0.7
MAX_VERIFICATION_RETRIES=3

# Security
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
