{
  "mcp_servers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/codebase"
      ],
      "tools": ["*"],
      "timeout": 30000
    },
    "neo4j-code-graph": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@neo4j-contrib/mcp-neo4j"
      ],
      "tools": ["*"],
      "timeout": 30000,
      "env": {
        "NEO4J_URI": "bolt://neo4j:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "password",
        "NEO4J_DATABASE": "codegraph",
        "NEO4J_READ_ONLY": "true"
      }
    }
  }
}
